{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "strict": 2,
    "semi": [
      2,
      "never"
    ],
    "no-console": 0,
    "comma-dangle": "error",
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "no-var": "error"
  }
}